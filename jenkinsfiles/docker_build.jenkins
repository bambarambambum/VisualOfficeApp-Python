#!groovy
properties([disableConcurrentBuilds()])

pipeline{
    agent{
        label "мастер"
    }
    stages{
        stage("create reader docker image"){
            steps{
                echo "======== start building reader image ========"
                dir ('/users_reader') {
                    sh 'docker image build -t reader .'
                }
            }
        }
    }
}